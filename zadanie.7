package academy.learnprogramming;

public class Main {

    public static void main(String[] args) {
    int n = 2;  // generation
    int k = 3;  // rabbits per couple
        System.out.println(rabbits(n , k));         // 11
        System.out.println(rabbits(3 , 2));  // 16
        System.out.println(rabbits(5,4));
        System.out.println(rabbits(4,5));
        System.out.println(rabbits(15,4));
    }

    public static int rabbits (int n , int k) {
        int rab = 2;  // starting point
        int temp = 0;   // 'couples' available at given moment/iteration
            for (int i = 0; i < n ; i ++ ) {
                if (rab%2 == 0) {            // even number of current rabbits
                    temp = rab/2;
                    rab += temp*k;
                } else {                    // odd number of current rabbits
                    temp = (rab - 1)/2;     // subtract 1 first
                    rab += temp*k;
                }
            }
         return  rab;
    }

}
